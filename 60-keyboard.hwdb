# usb/blue keyboard bind
evdev:input:b0003v*
 KEYBOARD_KEY_70029=capslock
 KEYBOARD_KEY_70039=esc

# laptop keyboard bind
evdev:atkbd:dmi:*
 KEYBOARD_KEY_01=capslock
 KEYBOARD_KEY_3a=esc

